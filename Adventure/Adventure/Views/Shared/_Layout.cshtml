                        <li class="metro1">@Html.ActionLink("Create Adventure", "Create", "Adventures")</li>
                    }
                    <li class="castro">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="alsandra">@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                   
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <h1 class="stone1">&copy; @DateTime.Now.Year - My ASP.NET Application</h1>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>

